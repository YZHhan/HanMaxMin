<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_common_empty_material" />

    <TextView
        android:id="@+id/tv_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:text="@string/common_empty_tips"
        android:textColor="@color/color_cool_grey"
        android:textSize="@dimen/font_size_two"/>
    <TextView
        android:id="@+id/tv_error_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/shape_rect_5radius"
        android:paddingBottom="@dimen/dp_3"
        android:paddingLeft="@dimen/dp_5"
        android:paddingRight="@dimen/dp_5"
        android:paddingTop="@dimen/dp_3"
        android:text="@string/loading"
        android:textColor="@color/color_cool_grey"
        android:textSize="@dimen/font_size_eleven"
        android:visibility="gone"/>

</LinearLayout>