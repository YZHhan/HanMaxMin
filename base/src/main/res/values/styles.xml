<resources>

    <!-- 系统主题样式 -->
    <style name="GC_Theme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--actionbar底色-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@color/color_bg</item>
        <!--不使用系统的toolbar-->
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionBarSize">50dp</item>
    </style>



    <!--按钮的Style-->
    <style name="btn_style" parent="@android:style/Widget.Button.Small">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:background">@drawable/btn_round_bkg</item>
        <item name="android:layout_margin">5dp</item>
    </style>

</resources>
